pwadmin:AddPasswordDialog
  rdf:type ui:NodeClass ;
  ui:prototype """
<div id=\"addPasswordDialog\" title=\"Add Secure Storage Password\">
    <form>
        <fieldset>
            <table>
                <tr>
                    <td>
                        <label for=\"userName\">User Name</label>
                    </td>
                    <td>
                        <input autocomplete=\"off\" class=\"form-control\" id=\"userName\" name=\"userName\" type=\"text\"/>
                    </td>
                </tr>
                <tr>
                    <td>
                        <label for=\"url\">URL</label>
                    </td>
                    <td>
                        <input autocomplete=\"off\" class=\"form-control\" id=\"url\" name=\"url\" type=\"text\"/>
                    </td>
                </tr>
                <tr>
                    <td>
                        <label for=\"password\">Password</label>
                    </td>
                    <td>
                        <input autocomplete=\"off\" class=\"form-control\" id=\"password\" name=\"password\" type=\"password\"/>
                    </td>
                </tr>
            </table>
        </fieldset>
    </form>
</div>
"""^^ui:Literal ;
  rdfs:label "Add secure storage password dialog" ;
  rdfs:subClassOf tbladmin:AdminElements ;
.
pwadmin:PasswordManagerPage
  rdf:type ui:NodeClass ;
  spin:constraint [
      rdf:type spl:Argument ;
      spl:optional "true"^^xsd:boolean ;
      spl:predicate arg:selectedUser ;
      spl:valueType xsd:string ;
      rdfs:comment "Currently selected user" ;
    ] ;
  ui:headIncludes """
<ui:group>
    <title>TopBraid Live - Password Management</title>
</ui:group>
"""^^ui:Literal ;
  ui:prototype """
<tblui:PageContainer arg:title=\"Password Management\">
    <tblui:Section arg:label=\"Manage Passwords in Secure Storage\">
        <table class=\"table table-compact table-nonfluid\">
            <thead>
                <tr>
                    <th>User</th>
                    <th>URL</th>
                    <th>Password</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <ui:forEach ui:resultSet=\"{#
                        SELECT ?user ?url ?hasPassword
                        WHERE {
                            ?any smf:secureStorageUsers ( ?user ?url ?hasPassword ) .
                        } }\">
                    <tr let:userAtUrl=\"{= ?user }@{= ?url }\">
                        <th>{= ?user }</th>
                        <td>{= ?url }</td>
                        <ui:if ui:condition=\"{= ?userAtUrl = ?selectedUser }\">
                            <td>
                                <input autofocus=\"autofocus\" class=\"form-control input-sm\" id=\"password-field\" placeholder=\"Enter new password\" type=\"password\"/>
                            </td>
                            <td class=\"text-nowrap\">
                                <input class=\"btn btn-default btn-xs\" onclick=\"{= ui:functionCall(&quot;pwadmin.submitPassword&quot;, ?user, ?url) }\" type=\"button\" value=\"Save\"/>
                                <swa:Space/>
                                <ui:createLink ui:viewClass=\"{= pwadmin:PasswordManagerPage }\">
                                    <a class=\"btn btn-default btn-xs\" href=\"{= ?link }\">Cancel</a>
                                </ui:createLink>
                            </td>
                        </ui:if>
                        <ui:else>
                            <td>
                                <ui:if ui:condition=\"{= ?hasPassword }\">****</ui:if>
                            </td>
                            <td class=\"text-nowrap\">
                                <ui:createLink arg:selectedUser=\"{= ?userAtUrl }\" ui:viewClass=\"{= pwadmin:PasswordManagerPage }\">
                                    <a class=\"btn btn-default btn-xs\" href=\"{= ?link }\">Edit</a>
                                </ui:createLink>
                                <swa:Space/>
                                <a class=\"btn btn-default btn-xs\" href=\"javascript:void(0);\" onclick=\"{= ui:functionCall(&quot;pwadmin.removePassword&quot;, ?userAtUrl) }\" title=\"Remove secure storage password\">Remove</a>
                            </td>
                        </ui:else>
                    </tr>
                </ui:forEach>
            </tbody>
        </table>
        <swa:Button arg:class=\"btn btn-default\" arg:label=\"Add New Password\" arg:onClick=\"pwadmin.openAddPasswordDialog();\"/>
        <pwadmin:AddPasswordDialog/>
        <script>pwadmin.initAddPasswordDialog()</script>
    </tblui:Section>
</tblui:PageContainer>
"""^^ui:Literal ;
  ui:responseType ui:HTML ;
  rdfs:label "Password manager page" ;
  rdfs:subClassOf tbladmin:AdminPages ;
.
pwadmin:RemoveSecureStoragePasswordService
  rdf:type ui:NodeClass ;
  spin:constraint [
      rdf:type spl:Argument ;
      spl:predicate arg:user ;
      spl:valueType xsd:string ;
      rdfs:comment "User and URL for which to remove the password" ;
    ] ;
  ui:prototype """
<ui:group>
    <pwadmin:removeSecureStoragePassword ui:args=\"*\"/>
    <swon:Object>
        <swon:Value arg:name=\"response\" arg:value=\"Successfully removed password for {= ?user }.\"/>
    </swon:Object>
</ui:group>
"""^^ui:Literal ;
  ui:responseType ui:JSON ;
  rdfs:comment "Callback for when the user removes a password" ;
  rdfs:label "Remove secure storage password service" ;
  rdfs:subClassOf tbladmin:AdminServices ;
.
arg:selectedUser
  rdf:type rdf:Property ;
  rdfs:subPropertyOf sp:arg ;
.
arg:user
  rdf:type rdf:Property ;
  rdfs:subPropertyOf sp:arg ;
.
